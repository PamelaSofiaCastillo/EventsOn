@model EventOn.ViewModel.SectorsViewModel.AddEditSectorViewModel
@{
    ViewBag.Title = "Sector";
    ViewBag.SubTitle = Model.sectorID.HasValue ? "Editar" : "Agregar";
    ViewBag.Section = "Sector";
}
<!-- Vertical Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h1>
                    <i class="material-icons">library_books</i>
                    @ViewBag.SubTitle @ViewBag.Title
                </h1>
            </div>
            <div class="body">
                <form method="post" action="@Url.Action("AddEditSector", "Sectors")">
                    @if (Model.sectorID.HasValue)
                    {
                        @Html.HiddenFor(x => x.sectorID)
                        @Html.HiddenFor(x => x.tieneValor, true)
                    }
                    <label for="nombre">Nombre Sector</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectSector.sectorName, new { @class = "form-control", @id = "sectorName", @type = "text", @placeholder = "Nombres del Sector. Ejm Ejecutivo" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectSector.sectorName, "", new { @class = "text-danger" })
                    </div>
                    <br>
                    <button id="guardarSector" type="submit" class="btn btn-primary m-t-15 waves-effect">GUARDAR</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Vertical Layout | With Floating Label -->
