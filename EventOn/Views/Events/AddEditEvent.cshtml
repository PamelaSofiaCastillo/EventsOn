@model EventOn.ViewModel.EventsViewModel.AddEditEventViewModel
@{
    ViewBag.Title = "Evento";
    ViewBag.SubTitle = Model.eventID.HasValue ? "Editar" : "Agregar";
    ViewBag.Section = "Evento";
}
<!-- Vertical Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h1>
                    <i class="material-icons">library_books</i>
                    @ViewBag.SubTitle @ViewBag.Title
                </h1>
            </div>
            <div class="body">
                <form method="post" action="@Url.Action("AddEditEvent", "Events")">
                    @if (Model.eventID.HasValue)
                    {
                        @Html.HiddenFor(x => x.eventID)
                        @Html.HiddenFor(x => x.tieneValor, true)
                    }
                    <label for="nombre">Nombre Evento</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectEvent.name, new { @class = "form-control", @id = "name-evento", @type = "text", @placeholder = "Nombre del evento. Ejm Aniversario alicorp" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectEvent.name, "", new { @class = "text-danger" })
                    </div>

                    <label for="nombre">Lugar</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectEvent.place, new { @class = "form-control", @id = "lugar", @type = "text", @placeholder = "Nombre del lugar" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectEvent.place, "", new { @class = "text-danger" })
                    </div>

                    <label for="nombre">Fecha</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectEvent.date, new { @class = "form-control", @id = "fecha", @type = "text", @placeholder = "Fecha de evento" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectEvent.date, "", new { @class = "text-danger" })
                    </div>

                    <label for="nombre">Fecha - Hora de comienzo</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectEvent.startTime, new { @class = "form-control", @id ="startTime", @type = "text", @placeholder = "Fecha - Hora de inicio de evento" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectEvent.startTime, "", new { @class = "text-danger" })
                    </div>

                    <label for="nombre">Fecha - Hora de fin</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.objectEvent.endTime, new { @class = "form-control", @id = "endTime", @type = "text", @placeholder = "Fecha - Hora de fin de evento" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectEvent.endTime, "", new { @class = "text-danger" })
                    </div>

                    <label>Business</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.DropDownListFor(x => x.objectEvent.idBusiness, new SelectList(Model.ListBusiness, "idBusiness", "businessName"), "Seleccione un negocio", new { @id = "listanegocio", @class = "form-control show-tick" })
                            @Html.DropDownListFor(x => x.objectEvent.idBusiness, new SelectList(Model.ListBusiness, "idBusiness", "businessName"), "Seleccione un negocio", new { @id = "listanegocio", @class = "form-control show-tick" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectEvent.idBusiness, "", new { @class = "text-danger" })
                    </div>

                    <label>Categoria</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.DropDownListFor(x => x.objectEvent.idCategory, new SelectList(Model.ListCategory, "idCategory", "categoryName"), "Seleccione una categoria", new { @id = "lista-categoria",  @class = "form-control show-tick" })
                        </div>
                        @Html.ValidationMessageFor(x => x.objectEvent.idCategory, "", new { @class = "text-danger" })
                    </div>

                    <br>
                    <button id="guardarEvento" type="submit" class="btn btn-primary m-t-15 waves-effect">GUARDAR</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Vertical Layout | With Floating Label -->
