<script type="text/javascript">
    function ConfirmDemo(n) {
        swal({
            title: "Esta seguro de eliminar?",
            text: "Ya no volvera a ver este registro",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Si, deseo eliminar!",
            cancelButtonText: "Cancelar",
            closeOnConfirm: false
        }, function () {
            swal("Eliminado!", "El registro se elimino con exito.", "success");
            location = $(this).attr("href")
            location = document.getElementById(n).href;
        });
    }

    function clickAdd() {
        var item = document.getElementById("addHrefnegocio");
        item.click();
    }

    function goEdit(n) {
        var idSelected = "edit+"+n;
        console.log(idSelected);
        var item = document.getElementById(idSelected);

        item.click();
    }
</script>

